-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, :id => "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", nil, (@chosen_ratings.include? rating)  
  = submit_tag :id=> "ratings_submit" 'Refresh'

%table#movies
  %thead
    %tr
      %th= link_to "Title", movies_path({"sortby": "title"}), :class => "hilite", :id => "title_header"
      %th Rating
      %th= link_to "Release Date", movies_path({"sortby": "date"}), :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
